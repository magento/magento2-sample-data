<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="NavigateDualHandleCardioBallEntityTest">
        <annotations>
            <features value="CatalogSampleData"/>
            <stories value="Sample data"/>
            <title value="Should be able to see Dual Handle Cardio Ball Product"/>
            <description value="Should be able to see Dual Handle Cardio Ball Product created by CatalogSampleData module"/>
            <severity value="MAJOR"/>
            <testCaseId value="MC-11182"/>
            <group value="sampleData"/>
        </annotations>

        <actionGroup ref="StorefrontOpenProductPageActionGroup" stepKey="openProductPage">
            <argument name="productUrl" value="{{DualHandleCardioBall.url_key}}" />
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductNameOnProductPageActionGroup" stepKey="assertProductName">
            <argument name="productName" value="{{DualHandleCardioBall.name}}" />
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductSkuOnProductPageActionGroup" stepKey="assertProductSku">
            <argument name="productSku" value="{{DualHandleCardioBall.sku}}" />
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductPriceOnProductPageActionGroup" stepKey="assertProductPrice">
            <argument name="productPrice" value="{{DualHandleCardioBall.price}}" />
        </actionGroup>
        <actionGroup ref="StorefrontAssertProductImagesOnProductPageActionGroup" stepKey="assertProductImage">
            <argument name="productImage" value="{{DualHandleCardioBall.image}}" />
        </actionGroup>
    </test>
</tests>
